
<h1>Create a new article 📝</h1>





<%# (local) for http post insted of ajax request  %>
<%# 
In Rails 6.0 and 5.2, all forms using form_with implement remote: true by default. 
These forms will submit data using an XHR (Ajax) request. 
To disable this include local: true. 
%>
<%# 
scope: :article
model: :article

%>

<% if @article.errors.any? %>
    <% for msg, index in @article.errors.full_messages.each_with_index %>
        <div class="alert alert-warning "><%= msg %></div>
    <% end %>
<% end %>

<%= form_with scope: :article, url: articles_path, local: true do |f| %>
    <div>
        <%= f.label :title, class:"form-label" %> 
        <br>
        <%= f.text_field :title, class:"form-control" %>
    </div>
    <div>
        <%= f.label :description, class:"form-label" %> 
        <br>
        <%= f.text_area :description, class:"form-control" %>
    </div>
    <div>
        <%= f.submit class: "btn btn-primary w-100 mt-3"  %>
    </div>
<% end %>

