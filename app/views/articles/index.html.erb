<main class="flex-grow-1">
  <div class="container my-3">
    <h1 class="text-center mt-3">Listing all articles üìã</h1>
    <div class="text-center mt-3">
      <%= link_to "Create a New Article", new_article_path , class: "btn btn-warning" %>
    </div>
    <% for article, index in @articles.each_with_index %>
      <div class="row justify-content-center mt-3">
        <div class="col-8">
          <div class="card text-center">
            <div class="card-header">
              <span>ID: <%= article.id %></span>
              <span> - </span>
              <span>Created by</span>
              <span>Ahmed Atef</span>
            </div>
            <div class="card-body">
              <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success text-decoration-none" %></h5>
              <p class="card-text"><%= truncate(article.description, length: 100) %></p>
              <%= link_to "Show", article_path(article) , class: "btn btn-info btn-sm" %>
              <%= link_to "Edit", edit_article_path(article) , class: "btn btn-warning btn-sm" %>
              <%= link_to "Delete", article_path(article) , class: "btn btn-danger btn-sm", method: "delete", data: {confirm: "Are you sure?"}  %>
            </div>
            <div class="card-footer text-muted">
              <small>Created <%= time_ago_in_words(article.created_at) %> ago, 
                Edited <%= time_ago_in_words(article.updated_at) %> ago</small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</main>
<footer class="mt-auto py-3 bg-dark text-white text-center">
  <div class="container">
    <p class="lead m-0"> Developed by <a href="https://github.com/ahmedatef1610" class="text-decoration-none">Ahmed M.Atef</a> with ‚ù§ </p>
  </div>
</footer>
