<div class="row justify-content-center">
  <div class="col-8">

    <%= render "shared/errors", obj: @category  %>

    <%= form_with model: @category, local: true, class:"p-3 mt-3 bg-secondary shadow rounded-3" do |f| %>
      <div class="row mt-3">
        <%= f.label :name,"Category Name", class:"col-md-2 col-form-label" %>
        <div class="col-md-10">
          <%= f.text_field :name, class:"form-control shadow rounded-3", placeholder:"Enter a name" %>
        </div>
      </div>
      <div class="text-center mt-3">
        <%= f.submit class: "btn btn-light btn-lg" %>
      </div>
    <% end %>
    
  </div>
</div>
<div class="text-center mt-3">
  <%= link_to "[ cancel and return to articles listing ]", articles_path , class: "btn btn-link text-decoration-none text-capitalize shadow-none" %>
</div>
