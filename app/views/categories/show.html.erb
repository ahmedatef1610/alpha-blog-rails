<main class="flex-grow-1">
  <div class="container my-3">

    <h1 class="text-center">Category: <%= @category.name %></h1>

    <% if logged_in? && current_user.admin? %>
      <div class="text-center mt-4">
        <%= link_to "Edit category name", edit_category_path(@category), class: "btn btn-warning btn-sm" %>
      </div>
    <% end %>

    <h3 class="text-center mt-4">Articles</h3>

    <%= render "articles/article" %>

    <div class="my-5 text-center">
      <%= will_paginate @articles, :container => false, renderer: WillPaginate::ActionView::BootstrapLinkRenderer, list_classes: %w(pagination pagination justify-content-center), previous_label: '&laquo;', next_label: '&raquo;' %>
      <div class="page_info small">
        <%= page_entries_info @articles %>
      </div>
    </div>


  </div>
</main>

<%= render "layouts/footer"%>
