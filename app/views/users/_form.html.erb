<div class="row justify-content-center">
  <div class="col-8">

    <%= render "shared/errors", obj: @user %>

    <%= form_with model: @user, local: true, class:"p-3 mt-3 bg-secondary shadow rounded-3" do |f| %>
      <div class="row mt-3">
        <%= f.label :username, class:"col-md-2 col-form-label" %>
        <div class="col-md-10">
          <%= f.text_field :username, class:"form-control shadow rounded-3", placeholder:"Enter a username" %>
        </div>
      </div>
      <div class="row mt-3">
        <%= f.label :email, class:"col-md-2 col-form-label" %>
        <div class="col-md-10">
          <%= f.email_field :email, class:"form-control shadow rounded-3", placeholder:"Enter your email username"  %>
        </div>
      </div>
      <div class="row mt-3">
        <%= f.label :password, class:"col-md-2 col-form-label" %>
        <div class="col-md-10">
          <%= f.password_field :password, class:"form-control shadow rounded-3", placeholder:"Enter your password"  %>
        </div>
      </div>
      <div class="text-center mt-3">
        <%= f.submit @user.new_record? ? "Sign Up" : "Update Account", class: "btn btn-light btn-lg" %>
      </div>
    <% end %>
    
  </div>
</div>
<div class="text-center mt-3">
  <%= link_to "[ cancel and return to articles listing ]", articles_path , class: "btn btn-link text-decoration-none text-capitalize shadow-none" %>
</div>
